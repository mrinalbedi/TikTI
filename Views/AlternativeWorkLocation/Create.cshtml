@model Tikti.Models.AlternativeWorkLocation

@{
    ViewData["Title"] = "Add Alternate Work Location";
    Layout = "~/Views/Shared/LoggedIn.cshtml";
}
<hr />
<form asp-action="Create">
    <div class="row no_margin">
        <div class="col-md-4" style="margin:auto; padding-top:2rem">
            <h1 class="text-center" style="font-weight:500; font-variant:small-caps; font-size:3.5rem">
                "Add Alternative Work Location"
            </h1>
        </div>

        <div class="col-md-4" style="margin:auto; padding-top:2rem; margin-top:0">
            <a class="float-right" asp-action="Create" asp-controller="RoleCulture">Skip this step</a>
            <br />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <h6>
                    <label asp-for="City" class="control-label">City</label>
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </h6>
            </div>
            <div class="form-group">
                <h6>
                    <label asp-for="Province" class="control-label">Province/State</label>
                    <input asp-for="Province" class="form-control" />
                    <span asp-validation-for="Province" class="text-danger"></span>
                </h6>
            </div>
            <div class="form-group">
                <h6>
                    <label asp-for="Postal" class="control-label">Postal</label>
                    <input asp-for="Postal" class="form-control" />
                    <span asp-validation-for="Postal" class="text-danger"></span>
                </h6>
            </div>
        </div>
    </div>
    <div class="row no_margin">
        <div class="col-md-6 text-center">
            <div class="form-group">
                <input type="submit" value="Save & Add Another" class="btn btn-primary btn-lg" asp-route-value="add" />
                <input type="submit" value="Save & Next" class="btn btn-primary btn-lg" asp-route-value="next" />
            </div>
        </div>
    </div>
</form>