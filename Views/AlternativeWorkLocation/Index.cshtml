@model IEnumerable<Tikti.Models.AlternativeWorkLocation>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Organization_view.cshtml";
}

<br />
<h1 class="text-center">Review and Edit Work Location</h1>
<hr />

<table class="table1" style="font-size:1.0rem;margin-left:auto; margin-right:auto">
    <thead>
        <tr>
            <th class="table_Padding table_border">
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th class="table_Padding table_border">
                @Html.DisplayNameFor(model => model.Province)
            </th>
            <th class="table_Padding table_border">
                @Html.DisplayNameFor(model => model.Postal)
            </th>
            <th class="table_Padding table_border"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="table_Padding table_border text-center">
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td class="table_Padding table_border text-center" ">
                    @Html.DisplayFor(modelItem => item.Province)
                </td>
                <td class="table_Padding table_border text-center" ">
                    @Html.DisplayFor(modelItem => item.Postal)
                </td>
                <td class="table_Padding table_border">
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.WorkLocationId">Edit Details</a>
                    <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.WorkLocationId">Delete Location</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<br />
<div class="col text-center">
    <h6><a asp-action="Add">Add New Work Location</a></h6>
</div>
<hr />
<div class="text-center">
    <form>
        <input type="checkbox" class="larger" id="chk" /> &nbsp <span>By clicking on this checkbox I agree to TikTi's <a class="font-weight-bolder" target="_blank" asp-controller="Home" asp-action="PrivacyPolicy">Privacy Policy</a></span>
        <br />
        <hr />
        <button style="visibility:hidden;" class="btn btn-primary btn-lg" id="btn-final" asp-action="RoleOpportunityUploaded">Upload Role Opportunity</button>
    </form>
</div>





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}


    <script type="text/javascript">
        $(document).ready(function () {
            $('#chk').click(function () {
                if ($(this).is(":checked")) {
                    document.getElementById("btn-final").style.visibility = "visible";
                }
                else {
                    document.getElementById("btn-final").style.visibility = "hidden";
                }
            });
        });
    </script>

}
