@model IEnumerable<Tikti.Models.AlternativeWorkLocation>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Organization_view.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Province)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Postal)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Province)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Postal)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.WorkLocationId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.WorkLocationId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.WorkLocationId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
