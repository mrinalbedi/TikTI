@model IEnumerable<Tikti.Models.AlternativeWorkLocation>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Organization_view.cshtml";
}

<h1>Add New Work Location</h1>

<p>
    <a asp-action="Add">Add New Work Location</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Province)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Postal)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Province)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Postal)
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.WorkLocationId">Edit</a> |
                    <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.WorkLocationId">Delete</a>
                </td>
            </tr>
        }
        </tbody>
</table>


<form>
    <input type="checkbox" /><span>By clicking on this checkbox <a>I agree</a></span>
</form>

<br />
<a class="btn btn-primary" asp-action="RoleOpportunityUploaded">Upload Role Opportunity</a>
    