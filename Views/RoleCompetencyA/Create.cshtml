@model Tikti.Models.RoleCompetencyA_VM

@{
    ViewData["Title"] = "Select Competencies for the role";
    Layout = "~/Views/Shared/LoggedIn.cshtml";
}

    @*<div class="col-md-4 align-content-center" style="margin:auto">
        <div class="row">
            <h1>Select Competency Part 1</h1>
        </div>
        <hr />*@
    <hr/>
    <form asp-action="Create">
        <div class="row no_margin">
            <div class="col-md-3" style="margin:auto; padding-top:2rem">
                <h1 class="text-center" style="font-weight:500; font-variant:small-caps; font-size:3.5rem">
                    Indicate Which Competencies are Critical for the Role....
                    (Choose all that apply)
                </h1>
            </div>
            <div class="col-md-3" style="margin:auto; padding-top:2rem">
                <div class="row text-center">
                    <h3 class="text-center" style="font-weight:400;font-size:2.5rem">
                        'Know – How'
                    </h3>
                </div>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @for (int i = 0; i < Model.competencyA.Count / 2; i++)
                {
                    <div style="font-size:1.2rem; line-height:2.0rem">
                        @Html.CheckBoxFor(m => m.competencyA[i].IsSelected)
                        @Html.LabelFor(m => m.competencyA[i].CompetencyName, Model.competencyA[i].CompetencyName)<br />
                    </div>
                    @Html.HiddenFor(m => m.competencyA[i].CompetencyId)
                }
            </div>
            <div class="col-md-3" style="margin:auto; padding-top:2rem">
                <div class="row text-center">
                    <h3 class="text-center" style="font-weight:400;font-size:2.5rem">
                        'Contribution'
                    </h3>
                </div>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @for (int i = Model.competencyA.Count / 2; i < Model.competencyA.Count; i++)
                {
                    <div style="font-size:1.2rem; line-height:2.0rem">
                        @Html.CheckBoxFor(m => m.competencyA[i].IsSelected)
                        @Html.LabelFor(m => m.competencyA[i].CompetencyName, Model.competencyA[i].CompetencyName)<br />
                    </div>
                    @Html.HiddenFor(m => m.competencyA[i].CompetencyId)
                }
            </div>
        </div>
            <div class="row no_margin">
                <div class="col-md-4 text-center">
                    <div class="form-group">
                        <input type="submit" value="Next Step" class="btn btn-primary btn-lg" />
                    </div>
                </div>
            </div>
            @*<div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>*@
            @*</div>*@
</form>
