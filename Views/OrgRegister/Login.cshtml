
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Organization_view.cshtml";
}

<h1 class="text-center">Organization Login</h1>
<hr />
<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <form asp-action="Login">

                <div class="text-danger font-weight-bold">@TempData["message"]</div>

                <div class="form-group">
                    <label class="control-label">Email</label>
                    <input type="text" class="form-control" name="email" />

                </div>
                <div class="form-group">
                    <label class="control-label">Password</label>
                    <input type="password" class="form-control" name="Pwd" />

                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>
            </form>


            <div class="row col-md-9">
                <a asp-action="Register" class="font-weight-bolder">Back to Registration</a>
            </div>
        </div>
    </div>
</div>

