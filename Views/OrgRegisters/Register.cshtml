@model Tikti.Models.OrgRegister

@{
    ViewData["Title"] = "Organization Registration";
    Layout = "~/Views/Shared/_Organization_view.cshtml";
}

    <div class="Org_reg_col_container">
        <div class="Org_reg_col_col2 container" style="background-image: linear-gradient(to bottom left, #e5ffcc, #ccccff, #ffffb3 );
   ">
            <div class="row">
                <div class="col text-center" style="margin:0rem 1rem 0rem 1rem;">
                    <img src="~/Images/Logo/Tikti.png" class="img-fluid" style="width:60% !important" />
                </div>
            </div>
            <div class=" row flip-box" style="margin:2.5rem">
                <div class="flip-box-inner">
                    <div class="flip-box-front">
                        <h2 style="font-size:2vw; padding-right:3rem">TikTi dramatically reduces time to hire</h2>
                    </div>
                    <div class="flip-box-back">
                        <h2 style="font-size:2vw; padding-right:3rem">TikTi means Fit, match, go together</h2>
                    </div>
                </div>
            </div>
            <div class="img-thumbnail" style="margin:0rem 1rem 0rem 1rem; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);">
                <img src="~/Images/Organization/Organization 7.jpg" class="img-fluid" />
            </div>
        </div>

        <div class="Org_reg_col_col1">
            <div class="row">
                <div class="col-sm-6 col-md-8 mx-auto">
                    <h1 onmouseover="style.color='green'" onmouseout="style.color='black'" class="font-weight-bolder" style="font-size:3vw ;color:black; text-align:center; text-shadow: 1px 1px 1px blue; font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif">
                        Organization Registration
                    </h1><hr />
                </div>
                <div class="col-sm-5 col-md-7 mx-auto">
                    <a class="float-right font-weight-bold" asp-controller="OrgRegisters" asp-action="Login">Already a member? Login Here</a>
                    <br /><br />
                    <form asp-action="Register">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="OrganizationName" class="control-label text-dark"></label>
                            <input asp-for="OrganizationName" class="form-control" />
                            <span asp-validation-for="OrganizationName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" class="control-label text-dark"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="control-label text-dark"></label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ConfirmPassword" class="control-label text-dark"></label>
                            <input asp-for="ConfirmPassword" class="form-control" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ContactFirstName" class="control-label text-dark"></label>
                            <input asp-for="ContactFirstName" class="form-control" />
                            <span asp-validation-for="ContactFirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ContactLastName" class="control-label text-dark"></label>
                            <input asp-for="ContactLastName" class="form-control" />
                            <span asp-validation-for="ContactLastName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ContactTitle" class="control-label text-dark"></label>
                            <input asp-for="ContactTitle" class="form-control" />
                            <span asp-validation-for="ContactTitle" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ContactPhoneNumber" class="control-label text-dark"></label>
                            <input asp-for="ContactPhoneNumber" class="form-control" placeholder="Enter a valid phone number without any spaces or special characters" />
                            <span asp-validation-for="ContactPhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Department" class="control-label text-dark"></label>
                            <input asp-for="Department" class="form-control" />
                            <span asp-validation-for="Department" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Next Step" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
