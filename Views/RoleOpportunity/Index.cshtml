@model IEnumerable<Tikti.Models.RoleOpportunity>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/LoggedIn.cshtml";
}
<br />
<h2 class="text-center" style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif">
    Role Opportunities
</h2>
<h4 class="text-center text-uppercase"><a asp-controller="SocCode" asp-action="Create">Upload Another Role Opportunity</a></h4>
@foreach (var item in Model)
{
    <table class="table1 table_border" style="font-size:1.3rem;margin-left:auto; margin-right:auto; border-collapse:unset !important">
        <tr>
            <td class="table_Padding table_border">@Html.DisplayNameFor(model => model.JobDescription) </td>
            <td class="table_Padding table_border"><a asp-controller="RoleOpportunity" asp-action="DownloadFile" asp-route-RouteID="@item.RoleOpportunityId" target="_blank">Download</a> </td>
        </tr>
        <tr>
            <td class="table_Padding table_border">@Html.DisplayNameFor(model => model.DesiredStartDate) </td>
            <td class="table_Padding table_border">@Html.DisplayFor(modelItem => item.DesiredStartDate)</td>
        </tr>
        <tr>
            <td class="table_Padding table_border">@Html.DisplayNameFor(model => model.ContractDuration) </td>
            <td class="table_Padding table_border">@Html.DisplayFor(modelItem => item.ContractDuration)</td>
        </tr>
        <tr>
            <td class="table_Padding table_border">@Html.DisplayNameFor(model => model.Salary) </td>
            <td class="table_Padding table_border">@Html.DisplayFor(modelItem => item.Salary)</td>
        </tr>
        <tr>
            <td class="table_Padding table_border">@Html.DisplayNameFor(model => model.City) </td>
            <td class="table_Padding table_border">@Html.DisplayFor(modelItem => item.City) </td>
        </tr>
        <tr>
            <td class="table_Padding table_border">@Html.DisplayNameFor(model => model.Province) </td>
            <td class="table_Padding table_border">@Html.DisplayFor(modelItem => item.Province) </td>
        </tr>
        <tr>
            <td class="table_Padding table_border">@Html.DisplayNameFor(model => model.Postal) </td>
            <td class="table_Padding table_border">@Html.DisplayFor(modelItem => item.Postal) </td>
        </tr>
        <tr>
            <td class="table_Padding table_border">@Html.DisplayNameFor(model => model.Weblink) </td>
            <td class="table_Padding table_border">@Html.DisplayFor(modelItem => item.Weblink) </td>
        </tr>
        <tr>
            <td class="table_Padding table_border">@Html.DisplayNameFor(model => model.ExtraCertification) </td>
            <td class="table_Padding table_border">@Html.DisplayFor(modelItem => item.ExtraCertification) </td>
        </tr>
        <tr>
            <td class="table_Padding table_border">@Html.DisplayNameFor(model => model.CertificationNavigation) </td>
            <td class="table_Padding table_border">@Html.DisplayFor(modelItem => item.CertificationNavigation.CertificationName) </td>
        </tr>
        <tr>
            <td class="table_Padding table_border">@Html.DisplayNameFor(model => model.CurrencyNavigation) </td>
            <td class="table_Padding table_border">@Html.DisplayFor(modelItem => item.CurrencyNavigation.Currency1) </td>
        </tr>
        <tr>
            <td class="table_Padding table_border">@Html.DisplayNameFor(model => model.EducationNavigation) </td>
            <td class="table_Padding table_border">@Html.DisplayFor(modelItem => item.EducationNavigation.Education1) </td>
        </tr>
        <tr>
            <td class="table_Padding table_border">@Html.DisplayNameFor(model => model.ExperienceNavigation) </td>
            <td class="table_Padding table_border">@Html.DisplayFor(modelItem => item.ExperienceNavigation.Experience1) </td>
        </tr>
        <tr>
            <td class="table_Padding table_border">@Html.DisplayNameFor(model => model.WorkCommitmentNavigation) </td>
            <td class="table_Padding table_border">@Html.DisplayFor(modelItem => item.WorkCommitmentNavigation.Commitment) </td>
        </tr>
    </table>
    <div class="text-center">
        <br />
        <a class="btn-lg btn btn-primary" asp-action="Delete" asp-route-id="@item.RoleOpportunityId">Delete Role Opportunity</a>
    </div>
    <hr />
    <br />
}


