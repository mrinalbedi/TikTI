@model Tikti.Models.RoleOpportunity

@{
    ViewData["Title"] = "Upload Role Opportunity";
    Layout = "~/Views/Shared/_Organization_view.cshtml";
}

<hr />
@*<div class="row align-items-center">*@
    <div class="col-md-4 align-content-center" style="margin:auto">
        <div class="row">
            <h1>Upload the Role Opportunity</h1>
        </div>
        <hr/>
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="AlternateTitle" class="control-label"></label>
                <select asp-for="AlternateTitleId" class="form-control" asp-items="ViewBag.AlternateTitle"></select>
            </div>
            <div class="form-group">
                <label asp-for="JobDescription" class="control-label">Job Description</label>
                <input asp-for="JobDescription" class="form-control-file" name="files" type="file" />
            </div>
            <div class="form-group">
                <label asp-for="HiringManagerId" class="control-label">Hiring Manager</label>
                <select asp-for="HiringManagerId" class="form-control" asp-items="ViewBag.HiringManager"></select>
            </div>
            <div class="form-group">
                <label asp-for="DesiredStartDate" class="control-label"></label>
                <input type="date" asp-for="DesiredStartDate" class="form-control" />
                <span asp-validation-for="DesiredStartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkCommitment" class="control-label"></label>
                <select asp-for="WorkCommitment" class="form-control" asp-items="ViewBag.WorkCommitment" id="wk"></select>
            </div>
            <div class="form-group" id="cd">
                <label asp-for="ContractDuration" class="control-label"></label>
                <input asp-for="ContractDuration" class="form-control" />
                <span asp-validation-for="ContractDuration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Currency" class="control-label"></label>
                <select asp-for="Currency" class="form-control" asp-items="ViewBag.Currency"></select>
            </div>
            <div class="form-group">
                <label asp-for="Salary" class="control-label"></label>
                <input asp-for="Salary" class="form-control" />
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Province" class="control-label"></label>
                <input asp-for="Province" class="form-control" />
                <span asp-validation-for="Province" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Postal" class="control-label"></label>
                <input asp-for="Postal" class="form-control" />
                <span asp-validation-for="Postal" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="TelecommutingRoles" /> @Html.DisplayNameFor(model => model.TelecommutingRoles)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Weblink" class="control-label"></label>
                <input asp-for="Weblink" class="form-control" />
                <span asp-validation-for="Weblink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Certification" class="control-label"></label>
                <select asp-for="Certification" class="form-control" asp-items="ViewBag.Certification"></select>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ExtraCertificationRequired" /> @Html.DisplayNameFor(model => model.ExtraCertificationRequired)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="ExtraCertification" class="control-label"></label>
                <input asp-for="ExtraCertification" class="form-control" />
                <span asp-validation-for="ExtraCertification" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Experience" class="control-label"></label>
                <select asp-for="Experience" class="form-control" asp-items="ViewBag.Experience"></select>
            </div>
            <div class="form-group">
                <label asp-for="Education" class="control-label"></label>
                <select asp-for="Education" class="form-control" asp-items="ViewBag.Education"></select>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Next Fields" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script type="text/javascript">
    $(document).ready(function () {
    $('#wk').on('change', function () {
        if (this.value == '3' || this.value == '4')
        {
            $("#cd").show();
        }
        else
        {
            $("#cd").hide();
        }
    });
    });
</script>
}
