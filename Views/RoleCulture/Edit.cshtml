@model Tikti.Models.RoleCultureVM

@{
    ViewData["Title"] = "Select cultures for the role";
    Layout = "~/Views/Shared/LoggedIn.cshtml";
}

<hr />
<form asp-action="Edit">
    <div class="row no_margin">
        <div class="col-md-3" style="margin:auto; padding-top:2rem">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @for (int i = 0; i < Model.cultures.Count; i++)
            {
                <div style="font-size:1.2rem; line-height:2.2rem">
                    @Html.CheckBoxFor(m => m.cultures[i].IsSelected)
                    @*@Html.LabelFor(m => m.cultures[i].CultureName, Model.cultures[i].CultureName)*@
                    <label title="@Model.cultures[i].Description">@Model.cultures[i].CultureName</label>
                    <br />
                </div>
                @Html.HiddenFor(m => m.cultures[i].CultureId)
            }
        </div>
        <div class="col-md-3" style="margin:auto; padding-top:2rem">
            <h1 class="text-center" style="font-weight:400; font-size:2.5rem">
                "<strong>Review and Edit</strong>" <br /> Role Cultures
            </h1><hr />
            <div class="form-group text-center">
                <input type="submit" value="Review Next Step" class="btn btn-primary btn-lg" />
            </div>
        </div>
    </div>
</form>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
