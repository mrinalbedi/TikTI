@model Tikti.Models.RoleCompetencyB_VM

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Organization_view.cshtml";
}

    <div class="col-md-4 align-content-center" style="margin:auto">
        <div class="row">
            <h1>Select Competency Part 2</h1>
        </div>
        <hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @for (int i = 0; i < Model.competencyB.Count; i++)
            {
                <div>
                    @Html.CheckBoxFor(m => m.competencyB[i].IsSelected)
                    @Html.LabelFor(m => m.competencyB[i].CompetencyName, Model.competencyB[i].CompetencyName)<br />
                </div>
                @Html.HiddenFor(m => m.competencyB[i].CompetencyId)
            }
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>

