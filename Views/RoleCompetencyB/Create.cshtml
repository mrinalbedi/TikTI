                @*@Html.LabelFor(m => m.competencyB[i].CompetencyName, Model.competencyB[i].CompetencyName)<br />*@
                
                <label title="@Model.competencyB[i].Description">@Model.competencyB[i].CompetencyName</label>
            </div>
                    @Html.HiddenFor(m => m.competencyB[i].CompetencyId)
                }
            </div>
        </div>
        <div class="row no_margin">
            <div class="col-md-4 text-center">
                <div class="form-group">
                    <input type="submit" value="Next Step" class="btn btn-primary btn-lg" />
                </div>
