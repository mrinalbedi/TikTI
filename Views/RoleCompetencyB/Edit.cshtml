@model Tikti.Models.RoleCompetencyB_VM

@{
    ViewData["Title"] = "Select more Competencies";
    Layout = "~/Views/Shared/LoggedIn.cshtml";
}
<hr />
<form asp-action="Edit">
    <div class="row no_margin">
        <div class="col-md-3" style="margin:auto; padding-top:2rem; margin-top:1rem">
            <div class="row text-center">
                <h3 class="text-center" style="font-weight:400;font-size:2.5rem">
                    'People'
                </h3>
            </div>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*@for (int i = 0; i < Model.competencyB.Count; i++)*@
            @for (int i = 0; i < 8; i++)
            {
                <div style="font-size:1.2rem; line-height:2.2rem">
                    @Html.CheckBoxFor(m => m.competencyB[i].IsSelected)
                    @*@Html.LabelFor(m => m.competencyB[i].CompetencyName, Model.competencyB[i].CompetencyName)*@
                    <label title="@Model.competencyB[i].Description">@Model.competencyB[i].CompetencyName</label>
                    <br />
                </div>
                @Html.HiddenFor(m => m.competencyB[i].CompetencyId)
            }
        </div>
        <div class="col-md-4" style="margin:auto; padding-top:2rem; margin-top:1rem">
            <div class="row text-center">
                <h3 class="text-center" style="font-weight:400;font-size:2.5rem">
                    'Personal Uniqueness'
                </h3>
            </div>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*@for (int i = 0; i < Model.competencyB.Count; i++)*@
            @for (int i = 8; i < Model.competencyB.Count; i++)
            {
                <div style="font-size:1.2rem; line-height:1.5rem">
                    @Html.CheckBoxFor(m => m.competencyB[i].IsSelected)
                    <label title="@Model.competencyB[i].Description">@Model.competencyB[i].CompetencyName</label><br />
                </div>
                @Html.HiddenFor(m => m.competencyB[i].CompetencyId)
            }
        </div>
        <div class="col-md-3" style="margin:auto; padding-top:2rem">
            <h1 class="text-center" style="font-weight:400; font-size:2.5rem">
                "<strong>Review and Edit</strong>" <br /> Competencies
            </h1><hr />
            <div class="form-group text-center">
                <input type="submit" value="Review Next Step" class="btn btn-primary btn-lg" />
            </div>
        </div>
    </div>
</form>